# Gemini API key (required) - get one at https://aistudio.google.com/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# ntfy.sh notifications (optional) - get a topic at https://ntfy.sh
NTFY_TOPIC=my-transcribe-topic
NTFY_EMAIL=you@example.com

# Dropbox app credentials (required for Dropbox source)
# Create an app at https://www.dropbox.com/developers/apps
DROPBOX_APP_KEY=your-dropbox-app-key
DROPBOX_APP_SECRET=your-dropbox-app-secret

# Delay between files in batch mode (seconds, optional, default: 45)
TRANSCRIBE_DELAY=45
